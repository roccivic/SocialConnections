<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="@string/lecturerMenu"
        android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/takeAttendanceBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/takeAttendance" />

            <Button
                android:id="@+id/postNotesBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/postNotes" />

            <Button
                android:id="@+id/viewStudentAttendanceBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/viewStudentAttendance" />

            <Button
                android:id="@+id/twitterBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/twitter" />

            <Button
                android:id="@+id/manageAssessmentsBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/manageAssessments" />

            <Button
                android:id="@+id/manageStudentsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manageStudents" />

            <Button
                android:id="@+id/manageGroupsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/manageGroups" />

            <Button
                android:id="@+id/uploadPicBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/upload" />

            <Button
                android:id="@+id/logOutBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/logOut" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
